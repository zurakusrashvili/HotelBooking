<script>
    $(function () {
        var today = new Date();

        $("#checkInBooking").datepicker({
            minDate: today,
            dateFormat: "yy-mm-dd",
            beforeShowDay: disableSpecificDates,
            onSelect: function (selectedDate) {
                var date = $(this).datepicker('getDate');
                date.setDate(date.getDate() + 1); // Add one day to the selected check-in date
                $("#checkOutBooking").datepicker("option", "minDate", date); // Set the minDate of check-out date picker to the next day
            }
        });

        $("#checkOutBooking").datepicker({
            minDate: today,
            dateFormat: "yy-mm-dd",
            beforeShowDay: disableSpecificDates,
            onSelect: function (selectedDate) {
                var date = $(this).datepicker('getDate');
                date.setDate(date.getDate() - 1); // Subtract one day from the selected check-out date
                $("#checkInBooking").datepicker("option", "maxDate", date); // Set the maxDate of check-in date picker to the previous day
            }
        });

        function disableSpecificDates(date) {
            var disabledDates = $('[ng-controller="lobbyController"]').scope().bookedDatesForSelectedRoom;
            var string = jQuery.datepicker.formatDate('yy-mm-dd', date);
            if (disabledDates.indexOf(string) !== -1) {
                return [false, "disabled-date", "Booked"];
            }
            return [true, ""];
        }
    });
 </script>